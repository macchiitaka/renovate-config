{
  "extends": [
    ":enableRenovate",
    ":npm",
    ":ignoreModulesAndTests",
    ":ignoreUnstable",
    ":widenPeerDependencies",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    ":maintainLockFilesMonthly",
    ":automergePatch",
    ":automergeTesters",
    ":automergeTypes",
    ":prHourlyLimitNone",
    ":prImmediately",
    ":noUnscheduledUpdates",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    ":label(renovate)",
    ":enableVulnerabilityAlertsWithLabel(vulnerability)",
    ":dependencyDashboard",
    ":timezone(Asia/Tokyo)",
    "replacements:all",
    "group:recommended",
    "group:monorepos",
    "group:test",
    "group:postcss",
    "helpers:disableTypesNodeMajor",
    "schedule:automergeNonOfficeHours",
    "schedule:weekends"
  ],
  "prConcurrentLimit": 3,
  "rangeStrategy": "bump",
  "transitiveRemediation": true,
  "automergeStrategy": "squash",
  "postUpdateOptions": ["npmDedupe", "yarnDedupeHighest"],
  "packageRules": [
    {
      "groupName": "sort-package-json",
      "matchPackageNames": ["sort-package-json"],
      "automerge": true
    },
    {
      "groupName": "Stylelint",
      "matchPackageNames": ["stylelint"],
      "matchPackagePatterns": ["^stylelint-"],
      "automerge": true
    },
    {
      "description": "disable package.json > engines update",
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "groupName": "Tiptap",
      "matchPackagePatterns": ["^@tiptap"]
    }
  ]
}
